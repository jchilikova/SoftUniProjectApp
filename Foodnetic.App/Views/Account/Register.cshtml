
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Foodnetic.ViewModels.Account
@model Foodnetic.ViewModels.Account.RegisterViewModel

<style>
    .text-danger {
        color: #dc3545 !important
    }
</style>

<body class="bg-img1">
@{
    await Html.RenderPartialAsync("_LoginRegisterNavbarPartial");
}
<main>
    @if (ViewData.ContainsKey("Error"))
    {
        <div class="bg-danger text-center container rounded mt-3 py-3">
            <h5 class="text-white">@ViewData["Error"]</h5>
        </div>
    }
    <div class="col-lg-4 col-lg-offset-4 dark-bg col-md-3 col-sm-3 col-sm-offset-4" style="border-radius: 2rem !important; margin-top: 10%;   background: rgba(0, 0, 0, 0.5);">
        <h1 class="text-center" style="color: white">Register</h1>
        <hr/>
        <form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Register">
            <div class="row">
                <div class="form-group col-md-6 text-center">
                    <strong><label asp-for="Username"></label></strong>
                    <input asp-for="Username" class="form-control" placeholder="Username...">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 text-center">
                    <strong><label asp-for="Email"></label></strong>
                    <input asp-for="Email" class="form-control" placeholder="Email...">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6 text-center">
                    <strong><label asp-for="Password"></label></strong>
                    <input asp-for="Password" class="form-control" placeholder="Password...">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 text-center">
                    <strong><label asp-for="ConfirmPassword"></label></strong>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="bg-eventure hr-2"/>
            <div class="row">
                <div class="form-group col-md-6 text-center">
                    <strong><label asp-for="FirstName"></label></strong>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name...">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 text-center">
                    <strong> <label asp-for="LastName"></label></strong>
                    <input asp-for="LastName" class="form-control" placeholder="Last Name...">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <hr/>
            <div class="col-md-offset-5 col-sm-offset-5 col-xs-offset-5" style="margin-bottom: 35px">
                <button type="submit" class="btn btn-green">Register</button>
            </div>
        </form>
    </div>
</main>
</body>